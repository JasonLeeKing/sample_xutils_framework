<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupTwoActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical" >
        
        <!-- ActionBar -->
    <FrameLayout style="@style/BlueFlor.ActionBar">

		<TextView 
		    android:id="@+id/work_management_title_left"
		    style="@style/BlueFlor.ActionBar.Icon"
	   	    android:drawableLeft="@drawable/calendar_selector"
	   	    android:layout_gravity="left" />

        <TextView style="@style/BlueFlor.ActionBar.Title"
            android:text="工作管理" />

		<TextView 
		    android:id="@+id/work_management_title_right"
		    style="@style/BlueFlor.ActionBar.BtnText"
	   	    android:layout_gravity="right"
	   	    android:text="加工作" />

    </FrameLayout><!-- End With ActionBar -->
    </LinearLayout>

</RelativeLayout>
